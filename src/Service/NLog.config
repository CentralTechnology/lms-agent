<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <targets>

    <target name="colouredConsole" xsi:type="ColoredConsole"
            useDefaultRowHighlightingRules="false"
            layout="${message}" detectConsoleAvailable="true">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>

      <target name="file" xsi:type="File"
              layout="${longdate} ${pad:padding=5:inner=${level:uppercase=true}} ${logger:when=level==LogLevel.Debug} ${message} ${exception:format=tostring}"
              fileName="${basedir}/logs/log.log" archiveFileName="${basedir}/logs/log.archive.{#}.log"
              archiveEvery="Day" archiveNumbering="Rolling" maxArchiveFiles="5" concurrentWrites="true"
              keepFileOpen="true" openFileCacheTimeout="15" cleanupFileName="false" encoding="iso-8859-2" />
  </targets>

  <rules>
    <logger name="*" minlevel="Info" writeTo="colouredConsole" />
    <logger name="*" minlevel="Debug" writeTo="file" />
  </rules>
</nlog>